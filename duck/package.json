{
  "scripts": {
    "build-css": "node-sass --include-path scss scss/main.scss ./popup-redesigned.css",
    "build-options-css": "node-sass --include-path scss scss/main-options.scss ./options-redesigned.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "watch-options-css": "nodemon -e scss -x \"npm run build-options-css\""
  },
  "dependencies": {
    "node-sass": "^4.11.0"
  }
}
